<routes xmlns="http://camel.apache.org/schema/spring">
  <route id="schedule">
    <from uri="scheduler:sync?delay=1m"/>
      <to uri="jpa://org.openmrs.eip.mysql.watcher.management.entity.TableSyncStatus?query=select s from org.openmrs.eip.mysql.watcher.management.entity.TableSyncStatus s"/>
      <split streaming="true">
        <simple>${body}</simple>
        <setHeader name="OpenmrsEntitySyncStatusId">
          <simple>${in.body.getId()}</simple>
        </setHeader>
        <to uri="direct:sync"/>
      </split>
  </route>
</routes>
